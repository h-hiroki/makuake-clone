= render "projects/header"

.content__login
  %h2 ログイン
  = render "devise/shared/links"

  .content__left
    %h3 SNSでログイン
    = image_tag("facebook.png", class: "content__left__sns" )
    = image_tag("twitter.png",  class: "content__left__sns" )
    = image_tag("line.png",     class: "content__left__sns" )
    = image_tag("ameba.png",    class: "content__left__sns" )

  .content__right
    .content__right__title メールアドレスでログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :"メールアドレス", class: "content__right__email__label"
        %br/
        = f.email_field :email, autofocus: true, class: "content__right__email__form"
      .field
        = f.label :"パスワード", class: "content__right__password__label"
        %br/
        = f.password_field :password, autocomplete: "off", class: "content__right__password__form"
      / - if devise_mapping.rememberable?
      /   .field
      /     = f.check_box :remember_me
      /     = f.label :remember_me
      .actions
        = f.submit "ログイン", class: "content__right__btn"

= render "projects/footer"
